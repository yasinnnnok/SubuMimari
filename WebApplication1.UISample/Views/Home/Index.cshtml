@model IEnumerable<ArtistQuery>

@{
    ViewData["Title"] = "Artistler";
}

<div class="row">
    <div class="col">
        <h1 class="display-4">Artists</h1>
        <hr />
    </div>
</div>

<div class="row my-2">
    <div class="col">
        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fa fa-plus me-2"></i>Yeni
        </a>
    </div>
</div>

<div class="row">
    <div class="col">
        <table class="table table-striped table-sm table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Is Alive</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (ArtistQuery item in Model)
                {
                    <tr>
                        <td>@item.name</td>
                        <td>@item.surname</td>
                        <td>
                            @if (item.isAlive.GetValueOrDefault())
                            {
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i>
                            }
                            <span class="ms-2">@item.isAliveStr</span>
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-info text-white btn-sm">
                                <i class="fa fa-edit me-2"></i>Güncelle
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash me-2"></i>Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>