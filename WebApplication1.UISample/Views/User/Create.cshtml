@model UserCreate


@{
    ViewData["Title"] = "Yeni Kullanıcı";
}

<div class="row">
    <div class="col">
        <h1 class="display-4">Yeni Kullanıcı</h1>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div class="form-group mb-2">
                <div asp-validation-summary="ModelOnly" class="text-danger small">
                </div>
            </div>
            <div class="form-group mb-2">
                <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="EnumRole" class="form-label">Rolü</label>
                <input asp-for="EnumRole" class="form-control" />
                <span asp-validation-for="EnumRole" class="text-danger small"></span>
            </div>


            <div class="form-group text-end">
                <button type="submit" class="btn btn-primary">Oluştur</button>
            </div>
        </form>
    </div>
</div>

@{
    List<string> errors = ViewContext.ModelState.Values.SelectMany(x => x.Errors.Select(y => y.ErrorMessage)).ToList();
}


@section Scripts{
    <script>
        @if (errors.Count > 0)
        {
            foreach (string err in errors)
            {
                @:toastr["error"]('@err', 'Hata!')
            }
        }

        @if (ViewData["success"] != null)
        {
            @:toastr["success"]('@ViewData["success"]', 'Eklendi');
        }
    </script>
}